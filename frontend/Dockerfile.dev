# Frontend Development Dockerfile with Hot Reload
FROM node:22-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Expose port
EXPOSE 3000

# Start dev server with hot reload
CMD ["pnpm", "dev"]
